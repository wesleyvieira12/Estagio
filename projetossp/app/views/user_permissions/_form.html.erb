<div class="ui form">
  <h4 class="ui dividing header">Informações</h4>
  <%= form_for(@user_permission) do |f| %>
    <% if @user_permission.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user_permission.errors.count, "error") %> prohibited this user_permission from being saved:</h2>
  
        <ul>
        <% @user_permission.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <%= f.label :user_id %><br>
      <%= f.collection_select(:user_id, User.all, :id, :name, {:prompt=>false}, {:class=>'ui dropdown'}) %>
    </div>
    <div class="field">
      <%= f.label :segment_id %><br>
      <%= f.collection_select(:segment_id, Segment.all, :id, :name, {:prompt=>false}, {:class=>'ui dropdown'}) %>
    </div>
    <div class="field">
      <%= f.label :permission_id %><br>
      <%= f.collection_select(:permission_id, Permission.all, :id, :name, {:prompt=>false}, {:class=>'ui dropdown'}) %>
    </div>
    <div class="actions">
      <%= f.submit class:'ui teal button' %>
    </div>
  <% end %>
</div>