<h1 class"ui header">Lista de tipo de requisições</h1>

  <%= search_form_for @q do |f| %>
          <div class="ui icon action input">
            <i class="search icon"></i>
            <%= f.search_field :name_cont, placeholder: 'Nome do Perito' do %>
            <%# Pesquisa que passa pela tabela User para conseguir o nome do Perito %>
            <% end %>
            <%= f.submit 'Procurar', class:'ui blue submit button' %>
          </div>
  <% end %>

  <table class='ui blue table '>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resquest_types.each do |resquest_type| %>
      <tr>
        <td><%= resquest_type.name %></td>
        <td><%= resquest_type.description %></td>
        <td><%= link_to 'Detalhes', resquest_type, class: 'ui tiny blue basic button' %></td>
        <td><%= link_to 'Editar', edit_resquest_type_path(resquest_type), class: 'ui tiny blue basic button' %></td>
        <td><%= link_to 'Excluir', resquest_type, method: :delete, data: { confirm: 'Are you sure?' }, class: 'ui tiny red basic button' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Tipo de Requisição', new_resquest_type_path, class: 'ui primary button' %>
