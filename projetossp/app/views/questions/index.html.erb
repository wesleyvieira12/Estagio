<h1 class"ui header">Lista de questões</h1>
  <table class='ui orange table '>
  <thead>
    <tr>
      <th>Tipo</th>
      <th>Descrição</th>
      <th>Padrão</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.resquest_type.name %></td>
        <td><%= question.description %></td>
        <td><%= question.question_default %></td>
        <td><%= link_to 'Detalhes', question, class: 'ui tiny blue basic button' %></td>
        <td><%= link_to 'Editar', edit_question_path(question), class: 'ui tiny blue basic button' %></td>
        <td><%= link_to 'Excluir', question, method: :delete, data: { confirm: 'Are you sure?' }, class: 'ui tiny red basic button' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Questão', new_question_path, class: 'ui primary button'%>
