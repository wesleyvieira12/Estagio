<h1 class"ui header">Lista de grupo de usuários</h1>
  <table class='ui blue table '>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Nível</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_groups.each do |user_group| %>
      <tr>
        <td><%= user_group.function %></td>
        <td><%= user_group.description %></td>
        <td><%= user_group.level %></td>
        <td><%= link_to 'Detalhes', user_group, class: 'ui tiny blue basic button' %></td>
        <td><%= link_to 'Editar', edit_user_group_path(user_group), class: 'ui tiny blue basic button' %></td>
        <td><%= link_to 'Excluir', user_group, method: :delete, data: { confirm: 'Are you sure?' }, class: 'ui tiny red basic button' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo grupo de usuário', new_user_group_path, class: 'ui primary button' %>
