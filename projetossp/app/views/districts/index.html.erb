
<br>

<h1 class"ui header">Lista de orgãos</h1>

<%= search_form_for @q, url: districts_path do |f| %>
          <div class="ui icon action input">
            <i class="search icon"></i>
            <%= f.search_field :name_cont, placeholder: 'Nome do Perito' do %>
            <%# Pesquisa que passa pela tabela User para conseguir o nome do Perito %>
            <% end %>
            <%= f.submit 'Procurar', class:'ui blue submit button' %>
          </div>
<% end %>

  <table class='ui blue table '>
    <thead>
      <tr>
        <th>Distrito Superior</th>
        <th>Nome</th>
        <th>Logradouro</th>
        <th>Cidade</th>
        <th>Telefone</th>
        <th>Email</th>
        <th>Segundo Telefone</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @districts.each do |district| %>
        <tr>
          <td><%= district.district.name unless district.district.nil?  %></td>
          <td><%= district.name %></td>
          <td><%= district.public_place %></td>
          <td><%= district.city %></td>
          <td><%= district.phone %></td>
          <td><%= district.email %></td>
          <td><%= district.second_phone %></td>
          <td><%= link_to 'Detalhes', district, class: 'ui tiny blue basic button' %></td>
          <td><%= link_to 'Editar', edit_district_path(district), class: 'ui tiny blue basic button' %></td>
          <td><%= link_to 'Excluir', district, method: :delete, data: { confirm: 'Are you sure?' }, class: 'ui tiny red basic button' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= will_paginate @districts, :semantic => true, renderer: WillPaginateSemanticUi::ActionView::Renderer %>

  <br>

<br>

<%= link_to 'Novo Orgão', new_district_path, class: 'ui primary button' %>

