
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="field">  
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, placeholder: "Digite seu nome" %>
      </div>

      <div class="four wide field">
          <%= f.label :photo %><br>
          <%= f.file_field :photo %>
          <%= f.hidden_field :photo_cache %>
      </div>

      <div class="field">  
          <%= f.label :email %><br />
          <%= f.email_field :email, placeholder: "Digite seu melhor E-mail" %>
      </div>
      
      <div class="field">  
          <%= f.label :user_group_id %><br />
          <%= f.collection_select(:user_group_id, UserGroup.all, :id, :description, {}, {class: 'ui dropdown'}) %>
      </div>

      <div class="field">  
          <%= f.label :registration %><br />
          <%= f.text_field :registration, placeholder: "Digite sua matricula" %>
      </div>

      <div class="field">  
          <%= f.label :district_id %><br />
          <%= f.collection_select(:district_id, District.all, :id, :name,{}, class:'ui dropdown') %>
          
      </div>

      <div class="field">
        <%# f.label :password %>
        <%# if @minimum_password_length %>
        <%# @minimum_password_length %>
        <%# end %><br />
        <%# f.password_field :password, autocomplete: "off" %>
      </div>

      <div class="field">
        <%# f.label :password_confirmation %><br />
        <%# f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

  <div class="actions">
    <%= f.submit class: 'ui primary button' %>
  </div>
<% end %>
