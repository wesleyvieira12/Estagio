<h1 class"ui header">Lista de módulos</h1>

<%= search_form_for @q do |f| %>
          <div class="ui icon action input">
            <i class="search icon"></i>
            <%= f.search_field :description_cont, placeholder: 'Nome do Perito' do %>
            <%# Pesquisa que passa pela tabela User para conseguir o nome do Perito %>
            <% end %>
            <%= f.submit 'Procurar', class:'ui blue submit button' %>
          </div>
<% end %>

  <table class='ui blue table '>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @segments.each do |segment| %>
      <tr>
        <td><%= segment.name %></td>
        <td><%= segment.description %></td>
        <td><%= link_to 'Detalhes', segment, class: 'ui tiny blue basic button' %></td>
        <td><%= link_to 'Editar', edit_segment_path(segment), class: 'ui tiny blue basic button' %></td>
        <td><%= link_to 'Excluir', segment, method: :delete, data: { confirm: 'Are you sure?' }, class: 'ui tiny red basic button' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @districts, :semantic => true, renderer: WillPaginateSemanticUi::ActionView::Renderer %>

