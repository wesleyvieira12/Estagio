<div class="ui form">
  <h4 class="ui dividing header">Informações</h4>
  <%= form_for(@group_permission) do |f| %>
    <% if @group_permission.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@group_permission.errors.count, "error") %> prohibited this group_permission from being saved:</h2>
  
        <ul>
        <% @group_permission.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <%= f.label :user_group_id %><br>
      <%= f.collection_select(:user_group_id, UserGroup.all, :id, :function, {}, {:class=>'ui search dropdown'}) %>
    </div>
    <div class="field">
      <%= f.label :segment_id %><br>
      <%= f.collection_select(:segment_id, Segment.all, :id, :name, {}, {:class=>'ui search dropdown'}) %>
    </div>
    <div class="field">
      <%= f.label :permission_id %><br>
      <%= f.collection_select(:permission_id, Permission.all, :id, :name, {}, {:class=>'ui search dropdown'}) %>
    </div>
    <div class="actions">
      <%= f.submit class:'ui primary button' %>
    </div>
  <% end %>
</div>